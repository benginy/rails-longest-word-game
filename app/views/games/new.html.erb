<h1>Games#new</h1>
<p>Find me in app/views/games/new.html.erb</p>


<h1>New Game</h1>
<p>Here are your letters:</p>
<% @letters.each do |letter| %>
<%= letter %>
<% end %>


<form action="/score" method="post" data-turbo="false">
<%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <div class="form-group">
    <input type="hidden" name="letters" value="<%= @letters.join(' ') %>">
    <label for="word">What is the longest word you can find?</label>
    <input type="text" name="word" class="form-control" id="word">
  </div>
  <button type="submit" class="btn btn-primary">Submit</button>
</form>
